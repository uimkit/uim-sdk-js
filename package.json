{
  "name": "@uimkit/client",
  "version": "0.0.1",
  "description": "A simple and easy client for the UIM API",
  "homepage": "https://docs.uimkit.chat",
  "bugs": {
    "url": "https://github.com/uimkit/uim-sdk-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uimkit/uim-sdk-js/"
  },
  "keywords": [
    "uim",
    "uimkit",
    "uim-api",
    "rest"
  ],
  "main": "./build/src",
  "types": "./build/src/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm run checkLoggedIn && npm run lint && npm run test",
    "build": "tsc",
    "prettier": "prettier --write ./src ./test",
    "lint": "prettier --check ./src ./test && eslint ./src ./test --ext .ts",
    "cspell": "cspell 'src/**/*' 'test/**/*'",
    "test": "jest",
    "check-links": "git ls-files | grep md$ | xargs -n 1 markdown-link-check",
    "prebuild": "npm run clean",
    "clean": "rm -rf ./build",
    "checkLoggedIn": "./scripts/verifyLoggedIn.sh"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "build/package.json",
    "build/src/**"
  ],
  "dependencies": {
    "@types/node-fetch": "^2.5.10",
    "browser-or-node": "^2.0.0",
    "core-js": "^3.23.5",
    "node-fetch": "^2.6.1",
    "webpubsub-js": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cspell": "^5.4.1",
    "eslint": "^7.24.0",
    "jest": "^29.2.0",
    "markdown-link-check": "^3.8.7",
    "prettier": "^2.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.2.4"
  }
}
